{
  "manifest_version": 3,
  "name": "Ephero - Secure Sharing",
  "version": "1.0.0",
  "description": "Secure ephemeral data sharing via WebSocket channels",
  "permissions": ["storage", "notifications", "activeTab"],
  "host_permissions": [
    "ws://localhost:4000/*",
    "http://localhost:4000/*",
    "wss://api.ephero.com/*",
    "https://api.ephero.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ephero",
    "default_icon": {
      "16": "ephero.png",
      "32": "ephero.png",
      "48": "ephero.png",
      "128": "ephero.png"
    }
  },
  "icons": {
    "16": "ephero.png",
    "32": "ephero.png",
    "48": "ephero.png",
    "128": "ephero.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open Ephero"
    }
  }
}
