{
  "name": "ephero-monorepo",
  "version": "1.0.0",
  "description": "üîê Secure ephemeral sharing tool - Monorepo containing server, chrome extension, and web client",
  "private": true,
  "workspaces": [
    "server",
    "chrome-extension",
    "web-client"
  ],
  "scripts": {
    "dev": "pnpm --filter server run start:dev",
    "dev:server": "pnpm --filter server run start:dev",
    "dev:web": "pnpm --filter web-client run dev",
    "dev:extension": "pnpm --filter chrome-extension run dev",
    "dev:all": "pnpm --parallel --filter server --filter web-client --filter chrome-extension run dev",
    "build": "pnpm --parallel --filter server --filter web-client --filter chrome-extension run build",
    "build:server": "pnpm --filter server run build",
    "build:web": "pnpm --filter web-client run build",
    "build:extension": "pnpm --filter chrome-extension run build",
    "install:all": "pnpm install",
    "test": "pnpm --parallel --filter server --filter web-client --filter chrome-extension run test",
    "test:server": "pnpm --filter server test",
    "test:web": "pnpm --filter web-client test",
    "test:extension": "pnpm --filter chrome-extension test",
    "start": "pnpm run dev:all"
  },
  "keywords": [
    "websocket",
    "webrtc",
    "secure-sharing",
    "ephemeral",
    "chrome-extension"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordaoqualho/Ephero.git"
  },
  "bugs": {
    "url": "https://github.com/jordaoqualho/Ephero/issues"
  },
  "homepage": "https://github.com/jordaoqualho/Ephero#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
